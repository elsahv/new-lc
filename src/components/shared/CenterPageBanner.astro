---
export interface Props {
  BannerTitle: string;
  paragraph: string;
}

const { BannerTitle, paragraph } = Astro.props as Props;
---

<div class="pl-3">
  <div id="BannerTitle-wrapper" class="pl-5 pr-5 pt-5 mt-[150px]">
    <h1 class="underline 2xl:text-5xl md:text-4xl text-3xl pb-2 pt-2 font-bold">
      {BannerTitle}
    </h1>

    <p class="text-xl pr-5">
      {paragraph}
    </p>
  </div>
</div>

---
import CenterPageBanner from "../shared/CenterPageBanner.astro";

// Pricing.astro
const packages = [
  {
    name: "Starter",
    price: "$29/mo",
    features: ["1 project", "Basic support", "Email alerts"],
    highlighted: false,
  },
  {
    name: "Pro",
    price: "$79/mo",
    features: ["5 projects", "Priority support", "Advanced analytics"],
    highlighted: true,
  },
  //   {
  //     name: "Business",
  //     price: "$149/mo",
  //     features: ["Unlimited projects", "Dedicated support", "Team accounts"],
  //     highlighted: false,
  //   },
];
---

<section class="pricing max-w-6xl mx-auto py-16 px-4 grid gap-8">
  <div class="text-parchment">
    <CenterPageBanner
      BannerTitle="Pricing"
      paragraph="I build custom applications for small businesses."
    />
  </div>
  <div class="grid md:grid-cols-2 gap-6">
    {
      packages.map((pkg) => (
        <div
          class={`border rounded-2xl p-6 shadow-sm bg-parchment flex flex-col ${pkg.highlighted ? "border-blue-600 shadow-md" : "border-gray-200"}`}
        >
          <h3 class="text-2xl font-semibold mb-2 text-center">{pkg.name}</h3>
          <p class="text-3xl font-bold text-center mb-4">{pkg.price}</p>
          <ul class="space-y-2 mb-6 text-gray-700">
            {pkg.features.map((f) => (
              <li class="flex items-center gap-2">
                <span>✔️</span> {f}
              </li>
            ))}
          </ul>
          <button
            class={`mt-auto w-full py-2 rounded-xl font-semibold transition ${pkg.highlighted ? "bg-blue-600 text-white hover:bg-blue-700" : "bg-gray-100 hover:bg-gray-200"}`}
          >
            Choose {pkg.name}
          </button>
        </div>
      ))
    }
  </div>
</section>
